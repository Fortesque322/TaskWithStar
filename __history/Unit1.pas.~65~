unit Unit1;

interface

uses
  System.SysUtils;

type
  TServer = record
    FModel: array of string;
    FUptimeDay :integer;
    FServiceDate: integer;
  end;

  TServiceCentr = record
    FDetails : array of string;
    FDeliveryTimeDay : integer;
    FBill : double;
  end;

  TServiceEngineer = record
    FName : array of string;
    FSalary : real;
    FExperience : real;
  end;

  TCount = class
    Server : TServer;
    ServiceCentr : TServiceCentr;
    ServiceEngineer : TServiceEngineer;
    procedure GetModel();
    procedure GetUpTime();
    procedure GetServiceDate();
    procedure GetDetails();
    procedure GetDeliveryTime();
    procedure GetBill();
    procedure GetEngineerName();
    procedure GetSalary();
    procedure GetExperience();
    function AsBytes : TBytes;
    procedure SetBytes(Buf: Tbytes);
    constructor Create();
    destructor Destroy;
  end;

implementation

{ TCount }

function TCount.AsBytes: TBytes;
begin

end;

constructor TCount.Create();
begin

end;

destructor TCount.Destroy;
begin

end;

procedure TCount.GetBill();
  var
    Price : double;
  begin
    Writeln('Счет: ');
    readln(Price);
    ServiceCentr.FBill := Price;
  end;

procedure TCount.GetDeliveryTime;
  var
    DeliveryDay : integer;
  begin
    Writeln('Дней до доставки: : ');
    readln(DeliveryDay);
    ServiceCentr.FDeliveryTimeDay := DeliveryDay;
  end;

procedure TCount.GetDetails;
  begin

  end;

procedure TCount.GetEngineerName(); //Quantity: integer; NameEngineer:array of string
  var
    i, Quantity : integer;
    x: string;
  begin
    i := 0;
    Writeln('Кол-во сотурдников: ');
    readln(Quantity);
    SetLength(ServiceEngineer.FName, Quantity);
    Writeln('Введите имена: ');
    for I := 0 to Quantity-1 do
    begin
      readln(x);
      ServiceEngineer.FName[i]:= x;
    end;
  end;

procedure TCount.GetExperience();
  var
    Exp: real;
  begin
    Writeln('Стаж: ');
    Readln(Exp);
    ServiceEngineer.FExperience := Exp;
  end;

procedure TCount.GetModel();
  var
    i,x : integer;
  begin
    i := 0;
    Writeln('Количество серверов: ');
    readln(x);
    SetLength(Server.FModel, x);
    Writeln('Введите модели: ');
    for I := 0 to x-1 do
    begin
      readln(Server.FModel[i]);
    end;
  end;

procedure TCount.GetSalary();
  var
    Salary : real;
  begin
    Writeln('ЗП: ');
    readln(Salary);
    ServiceEngineer.FSalary := Salary;
  end;

procedure TCount.GetServiceDate();
  var
    DateDay: integer;
  begin
    Writeln('Через сколько дней обсуживание: ');
    readln(DateDay);
    Server.FServiceDate:= DateDay;
  end;

procedure TCount.GetUpTime();
  var
    Days : integer;
  begin
    Writeln('Время рааботы сервера (Дни): ');
    readln(Days);
    Server.FUptimeDay:= Days;
  end;

procedure TCount.SetBytes(Buf: Tbytes);
begin

end;

end.
